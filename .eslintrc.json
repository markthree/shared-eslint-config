{
	"env": {
		"es6": true,
		"node": true,
		"browser": true // 浏览器
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true // 启用 jsx
		}
	},
	"rules": {
		// 从不加分号
		"semi": [
			"warn",
			"never"
		],
		// 单引号
		"quotes": [
			"warn",
			"single"
		],
		// 缩进 4 个空格
		"indent": [
			"error",
			4
		],
		// 不允许使用 var
		"no-var": "error",
		// new 的构造函数首字母必须大写
		"new-cap": "warn",
		// 不允许太多的空行
		"no-multiple-empty-lines": "warn",
		// 禁止出现未使用过的变量
		"no-unused-vars": "warn",
		// 禁止 undefined 作为标识符
		"no-undefined": "warn",
		// 禁止在变量定义之前使用它们
		"no-use-before-define": "warn",
		// 在构造函数中禁止在调用 super() 之前使用 this 或 super
		"no-this-before-super": "warn",
		// 使用 rest 参数而不是 arguments
		"prefer-rest-params": "warn",
		// 禁止重复的导入
		"no-duplicate-imports": "warn",
		// 禁止对常量修改
		"no-const-assign": "warn",
		// 强制箭头函数箭头前后间隔一致
		"arrow-spacing": "warn",
		// 箭头函数参数可省略则省略
		"arrow-parens": [
			"warn",
			"as-needed"
		],
		// 禁止修改类声明的变量
		"no-class-assign": "warn",
		// 箭头函数体的大括号可省略则省略
		"arrow-body-style": [
			"error",
			"as-needed"
		],
		// 禁止对象出现重名的 key
		"no-dupe-keys": "warn",
		// 禁止出现重复的 case 标签
		"no-duplicate-case": "warn",
		// 禁止条件表达式中出现赋值操作符
		"no-cond-assign": "warn",
		// 禁止出现空语句块
		"no-empty": "warn",
		// 禁止对 catch 子句中的异常重新赋值
		"no-ex-assign": "warn",
		// 禁止不必要的布尔类型转换
		"no-extra-boolean-cast": "warn",
		// 禁止冗余的括号
		"no-extra-parens": "warn",
		// 	禁止对 function 声明重新赋值
		"no-func-assign": "warn",
		// 禁止将全局对象当作函数进行调用
		"no-obj-calls": "warn",
		// 禁止使用令人困惑的多行表达式 
		"no-unexpected-multiline": "warn",
		// 禁止在 return、throw、continue 和 break 语句后出现不可达代码
		"no-unreachable": "warn",
		// 把 var 语句看作是在块级作用域范围之内
		"block-scoped-var": "warn",
		// 要求使用 === 和 !==
		"eqeqeq": "warn",
		// 禁用不必要的嵌套块
		"no-lone-blocks": "warn",
		// 禁用魔术数字
		"no-magic-numbers": "warn",
		// 禁止重新声明变量
		"no-redeclare": "warn",
		// 禁止自身赋值
		"no-self-assign": "warn",
		// 禁止自身比较
		"no-self-compare": "warn",
		// 禁止删除变量
		"no-delete-var": "warn",
		"vue/multi-word-component-names": [
			"error",
			{
				"ignores": [
					"index" // 忽略 index 命名，以获得无逻辑 sfc
				]
			}
		]
	},
	"extends": [
		"plugin:vue/vue3-recommended" // 支持 vue sfc
	]
}